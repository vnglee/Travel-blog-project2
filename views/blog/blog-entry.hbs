<div class="container">
  <div class="opacity-75">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-2">
      <h3>Comments:</h3>
{{#each comments}}
<div class="card rounded">
    <div class="card-body"> 
        <div class="row">
            <div class="col">
 <img src="{{user.imageUrl}}" alt="user image" class="rounded-circle img-fluid float-left" style="max-width:5%">
    <b>{{user.userName}}</b>
    <br>
    <p class="lead">{{comment}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}

<form action="/comment/add-comment/{{_id}}" method="POST">
    <label for="comment"></label>
    <input id="exampleFormControlInput1" type="text" name="comment" class="form-control" placeholder="Add Comment">
    <br>
    <button type="submit" class="btn btn-secondary">Submit</button>
</form>
